<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Imported Rule 10" stopProcessing="true">
                    <match url="^(index\.php|robots\.txt|favicon\.ico)$" ignoreCase="false" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{HTTPS}" pattern="on" ignoreCase="false" />
                        <add input="{SERVER_PORT}" pattern="^443$" ignoreCase="false" negate="true" />
                        <add input="{HTTP_REFERER}" pattern="^$" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="None" />
                </rule>
                <rule name="Imported Rule 11" stopProcessing="true">
                    <match url="^(media|css)(/.*)?$" ignoreCase="false" />
                    <action type="None" />
                </rule>
                <rule name="Imported Rule 12" stopProcessing="true">
                    <match url="^(Models|Lib|Config|Panel|Aplication|Template|Cache|cache|Log|log)$" ignoreCase="false" />
                    <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Forbidden" />
                </rule>
                <rule name="Imported Rule 13" stopProcessing="true">
                    <match url="^(.*)$" ignoreCase="false" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" ignoreCase="false" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.php/{R:1}" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
